@model IEnumerable<BeautySalonBooking.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<h2>Our services</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Service</th>
            <th>Duration</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceName</td>
            <td>@item.DurationMinutes min</td>
            <td>@item.Price.ToString("0.00") kr</td>
            <td>
                <a asp-controller="Booking" asp-action="Create" asp-route-serviceId="@item.Id" class="btn btn-primary">Book</a>
            </td>
        </tr>
    }
    </tbody>
</table>

