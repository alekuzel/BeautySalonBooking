@model List<BeautySalonBooking.Models.Service>

@{
    ViewData["Title"] = "Tjänster";
}

<h1>Våra tjänster</h1>

<table class="table">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Pris (kr)</th>
            <th>Varaktighet (min)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var service in Model)
    {
        <tr>
            <td>@service.ServiceName</td>
            <td>@service.Price.ToString("0.00")</td>
            <td>@service.DurationMinutes</td>
            <td>
                <a class="btn btn-success" href="@Url.Action("Create", "Booking", new { serviceId = service.Id })">Boka</a>
            </td>
        </tr>
    }
    </tbody>
</table>
