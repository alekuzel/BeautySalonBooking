@model List<BeautySalonBooking.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<h1>Our services</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price (kr)</th>
            <th>Duration (min)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var service in Model)
    {
        <tr>
            <td>@service.ServiceName</td>
            <td>@service.Price.ToString("0.00")</td>
            <td>@service.DurationMinutes</td>
            <td>
                <a class="btn-info" href="@Url.Action("Details", "Service", new { id = service.Id })">More info</a>
                <a class="btn-primary" href="@Url.Action("WeekView", "Booking", new { serviceId = service.Id })">Book</a>
            </td>
        </tr>
    }
    </tbody>
</table>
