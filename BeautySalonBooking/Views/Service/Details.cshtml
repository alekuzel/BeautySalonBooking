@model BeautySalonBooking.Models.Service

@{
    ViewData["Title"] = "Detaljer för tjänst";
}

<h2>@Model.ServiceName</h2>

<p><strong>Pris:</strong> @Model.Price.ToString("0.00") kr</p>
<p><strong>Varaktighet:</strong> @Model.DurationMinutes minuter</p>
<p><strong>Beskrivning:</strong></p>
<p>@Model.Description</p>

<hr />

<a class="btn btn-success" href="@Url.Action("WeekView", "Booking", new { serviceId = Model.Id })">Boka denna tjänst</a>
<a class="btn btn-secondary" href="@Url.Action("Index", "Service")">Tillbaka</a>
