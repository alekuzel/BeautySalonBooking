@model List<BeautySalonBooking.Models.Service>

@{
    ViewData["Title"] = "Manage Services";
}

<h1>Manage services</h1>

<a class="btn btn-primary mb-3" href="@Url.Action("Create", "Service")">Create a new service</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price (kr)</th>
            <th>Duration (min)</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
   @foreach (var service in Model)
{
    <tr>
        <td>@service.ServiceName</td>
        <td>@service.Price.ToString("0.00")</td>
        <td>@service.DurationMinutes</td>
        <td>@service.Description</td>
        <td>
            <a class="btn btn-edit btn-sm" 
               href="@Url.Action("Edit", "Service", new { id = service.Id })">Edit</a>

            <form asp-action="Delete" asp-route-id="@service.Id" method="post" 
                  style="display:inline;" 
                  onsubmit="return confirm('Are you sure you want to remove this service?');">
                <button type="submit" class="btn btn-delete btn-sm">Delete</button>
            </form>
        </td>
    </tr>
}

    </tbody>
</table>


<style>



  
    .table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .table thead th {
        background-color: #f5e9ef; 
        color: #2d2d2d; 
        font-weight: 600;
        border-bottom: 2px solid #d4afb9; 
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(248, 241, 245, 0.5); 
    }

    .table-hover tbody tr:hover {
        background-color: rgba(212, 175, 185, 0.1); 
    }
</style>