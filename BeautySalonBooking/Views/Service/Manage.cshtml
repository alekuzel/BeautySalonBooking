@model List<BeautySalonBooking.Models.Service>

@{
    ViewData["Title"] = "Hantera tjänster";
}

<h1>Hantera tjänster</h1>

<a class="btn btn-primary mb-3" href="@Url.Action("Create", "Service")">Skapa ny tjänst</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Pris (kr)</th>
            <th>Varaktighet (min)</th>
            <th>Beskrivning</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var service in Model)
    {
        <tr>
            <td>@service.ServiceName</td>
            <td>@service.Price.ToString("0.00")</td>
            <td>@service.DurationMinutes</td>
            <td>@service.Description</td>
            <td>
                <a class="btn btn-edit btn-sm" href="@Url.Action("Edit", "Service", new { id = service.Id })">Redigera
                </a>
                <a class="btn btn-delete btn-sm" href="@Url.Action("Delete", "Service", new { id = service.Id })">Ta bort
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>


<style>
    /* Button styles matching your salon theme */
    .btn-edit {
        background-color: #9cadce;
        border-color: #9cadce;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 30px;
        font-weight: 500;
        transition: all 0.3s ease;
        margin-right: 0.5rem;
    }

    .btn-edit:hover {
        background-color: #7e8fc0; /* Darker shade */
        border-color: #7e8fc0;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-delete {
        background-color: #d4afb9; 
        border-color: #d4afb9;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 30px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-delete:hover {
        background-color: #c895a4; /* Darker shade */
        border-color: #c895a4;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

  
    .table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .table thead th {
        background-color: #f5e9ef; 
        color: #2d2d2d; 
        font-weight: 600;
        border-bottom: 2px solid #d4afb9; 
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(248, 241, 245, 0.5); 
    }

    .table-hover tbody tr:hover {
        background-color: rgba(212, 175, 185, 0.1); 
    }
</style>