@model BeautySalonBooking.Models.Booking
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Boka tid";
    var selectedService = ViewData["Service"] as BeautySalonBooking.Models.Service;
    var allServices = ViewData["Services"] as SelectList;
}

<h2>Boka en tid</h2>

<form asp-controller="Booking" asp-action="Create" method="post">

    @if (selectedService != null)
{
    <div class="form-group">
        <label class="control-label">Tjänst</label>
        <input type="hidden" asp-for="ServiceId" />
        <input class="form-control" value="@selectedService.ServiceName" disabled />
    </div>
}
else
{
    <div class="form-group">
        <label asp-for="ServiceId" class="control-label">Tjänst</label>
        <select asp-for="ServiceId" class="form-control" asp-items="allServices">
            <option value="">-- Välj tjänst --</option>
        </select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>
}


    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="datetime-local"
               min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Förnamn</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label">Efternamn</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="control-label">Telefonnummer</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">E-post</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Boka</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
