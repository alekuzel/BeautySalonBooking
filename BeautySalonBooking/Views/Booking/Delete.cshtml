@model BeautySalonBooking.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>

<div>
    <h4>Booking Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Service</dt>
        <dd class="col-sm-10">@Model.Service?.ServiceName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("g")</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">E-mail</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-delete btn-sm" type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

